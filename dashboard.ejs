<!DOCTYPE html>
<html lang="bg">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Логистична компания - Контролен панел</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <style>
        .sidebar {
            min-height: 100vh;
            background-color: #f8f9fa;
            padding-top: 20px;
        }
        .sidebar .nav-link {
            color: #333;
        }
        .sidebar .nav-link.active {
            background-color: #0d6efd;
            color: white;
        }
        .stat-card {
            transition: transform 0.3s;
        }
        .stat-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
                <div class="position-sticky pt-3">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link active" href="/dashboard">
                                <i class="bi bi-speedometer2 me-2"></i> Контролен панел
                            </a>
                        </li>
                        <% if (user.role === 'admin' || user.role === 'employee') { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/shipments">
                                <i class="bi bi-box-seam me-2"></i> Пратки
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/clients">
                                <i class="bi bi-people me-2"></i> Клиенти
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/employees">
                                <i class="bi bi-person-badge me-2"></i> Служители
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/offices">
                                <i class="bi bi-building me-2"></i> Офиси
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/reports">
                                <i class="bi bi-bar-chart me-2"></i> Справки
                            </a>
                        </li>
                        <% } else { %>
                        <li class="nav-item">
                            <a class="nav-link" href="/shipments/my">
                                <i class="bi bi-box-seam me-2"></i> Моите пратки
                            </a>
                        </li>
                        <% } %>
                    </ul>
                </div>
            </div>

            <!-- Main content -->
            <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4 py-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">Контролен панел</h1>
                    <div class="btn-toolbar mb-2 mb-md-0">
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="bi bi-person-circle me-1"></i> <%= user.username %>
                            </button>
                            <ul class="dropdown-menu">
                                <li><a class="dropdown-item" href="/profile"><i class="bi bi-person me-2"></i>Профил</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/auth/logout"><i class="bi bi-box-arrow-right me-2"></i>Изход</a></li>
                            </ul>
                        </div>
                    </div>
                </div>

                <!-- Stats cards -->
                <div class="row mb-4">
                    <div class="col-md-3">
                        <div class="card text-white bg-primary mb-3 stat-card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h5 class="card-title">Пратки</h5>
                                        <h3 class="card-text"><%= stats.totalShipments %></h3>
                                    </div>
                                    <i class="bi bi-box-seam display-4"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-success mb-3 stat-card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h5 class="card-title">Активни клиенти</h5>
                                        <h3 class="card-text"><%= stats.totalClients %></h3>
                                    </div>
                                    <i class="bi bi-people display-4"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-info mb-3 stat-card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h5 class="card-title">Служители</h5>
                                        <h3 class="card-text"><%= stats.totalEmployees %></h3>
                                    </div>
                                    <i class="bi bi-person-badge display-4"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card text-white bg-warning mb-3 stat-card">
                            <div class="card-body">
                                <div class="d-flex justify-content-between align-items-center">
                                    <div>
                                        <h5 class="card-title">Офиси</h5>
                                        <h3 class="card-text"><%= stats.totalOffices %></h3>
                                    </div>
                                    <i class="bi bi-building display-4"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent shipments -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Последни пратки</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Подател</th>
                                        <th>Получател</th>
                                        <th>Тегло (кг)</th>
                                        <th>Цена</th>
                                        <th>Статус</th>
                                        <th>Действия</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% shipments.forEach(shipment => { %>
                                    <tr>
                                        <td><%= shipment.id %></td>
                                        <td><%= shipment.sender_name %></td>
                                        <td><%= shipment.receiver_name %></td>
                                        <td><%= shipment.weight %></td>
                                        <td><%= shipment.price.toFixed(2) %> лв.</td>
                                        <td>
                                            <span class="badge 
                                                <%= shipment.status === 'pending' ? 'bg-secondary' : '' %>
                                                <%= shipment.status === 'in_transit' ? 'bg-primary' : '' %>
                                                <%= shipment.status === 'delivered' ? 'bg-success' : '' %>
                                                <%= shipment.status === 'canceled' ? 'bg-danger' : '' %>">
                                                <%= 
                                                    shipment.status === 'pending' ? 'Чакаща' : 
                                                    shipment.status === 'in_transit' ? 'В процес на доставка' : 
                                                    shipment.status === 'delivered' ? 'Доставена' : 
                                                    'Отказана' 
                                                %>
                                            </span>
                                        </td>
                                        <td>
                                            <a href="/shipments/<%= shipment.id %>" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i> Преглед
                                            </a>
                                        </td>
                                    </tr>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
