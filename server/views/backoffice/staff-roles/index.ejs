<table class="table table-striped table-bordered align-middle">
  <a href="/bo/staff-roles/add" class="btn btn-success mb-3">
    <i class="fas fa-plus"></i> Assign Role
  </a>

  <thead class="table-primary">
    <tr>
      <th>Staff Member</th>
      <th>Role</th>
    </tr>
  </thead>
  <tbody>
    <% if (assignments.length === 0) { %>
      <tr>
        <td colspan="2" class="text-center">No roles assigned to staff members.</td>
      </tr>
    <% } %>
    <% assignments.forEach(item => { %>
      <tr>
        <td><%= item.first_name %> <%= item.last_name %> (ID: <%= item.staff_id %>)</td>
        <td><%= item.role_name %></td>
      </tr>
    <% }) %>
  </tbody>
</table>
