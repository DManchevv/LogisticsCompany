<a href="/bo/staff-roles/add" class="btn btn-success mb-3">
  <i class="fas fa-plus"></i> Assign Role
</a>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Staff Member</th>
      <th>Role</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody> 
    <% if (assignments.length === 0) { %>
      <tr><td colspan="3" class="text-center">No roles assigned.</td></tr>
    <% } else { %>
      <% assignments.forEach(a => { %>
        <tr>
          <td><%= a.first_name %> <%= a.last_name %> (ID: <%= a.staff_id %>)</td>
          <td><%= a.role_name %></td>
          <td>
            <form action="/bo/staff-roles/delete" method="POST" class="d-inline" onsubmit="return confirm('Are you sure you want to remove this role?');">
              <input type="hidden" name="staff_id" value="<%= a.staff_id %>">
              <input type="hidden" name="role_name" value="<%= a.role_name %>">
              <button class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i> Delete</button>
            </form>
          </td>
        </tr> 
      <% }) %>
    <% } %>
  </tbody>
</table>
