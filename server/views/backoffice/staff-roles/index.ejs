<a href="/bo/staff-roles/add" class="btn btn-success mb-3">
  <i class="fas fa-plus"></i> Assign Role
</a>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Staff Member</th>
      <th>Role</th>
    </tr>
  </thead>
  <tbody>
    <% if (assignments.length === 0) { %>
      <tr><td colspan="2" class="text-center">No roles assigned.</td></tr>
    <% } else { %>
      <% assignments.forEach(a => { %>
        <tr>
          <td><%= a.first_name %> <%= a.last_name %> (ID: <%= a.staff_id %>)</td>
          <td><%= a.role_name %></td>
        </tr>
      <% }) %>
    <% } %>
  </tbody>
</table>
