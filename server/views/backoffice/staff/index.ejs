<table class="table table-striped table-bordered align-middle">
  <thead class="table-primary">
    <tr>
      <th>ID</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Position</th>
      <th>Office ID</th>
      <th>Created At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% if (staff.length === 0) { %>
      <tr>
        <td colspan="7" class="text-center">No staff members found.</td>
      </tr> 
    <% } else { %>
      <% staff.forEach(member => { %>
        <tr>
          <td><%= member.id %></td>
          <td><%= member.first_name %></td>
          <td><%= member.last_name %></td>
          <td><%= member.position %></td>
          <td><%= member.office_name || '-' %></td>
          <td><%= new Date(member.created_at).toLocaleString() %></td>
          <td>
            <a href="/bo/staff/edit/<%= member.id %>" class="btn btn-sm btn-primary me-1">
              <i class="fas fa-edit"></i> Edit
            </a>
            <form method="POST" action="/bo/staff/delete/<%= member.id %>" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this staff member?');">
              <button type="submit" class="btn btn-sm btn-danger">
                <i class="fas fa-trash"></i> Delete
              </button>
            </form>
          </td>
        </tr>
      <% }) %>
    <% } %>
  </tbody>
</table>

<a href="/bo/staff/add" class="btn btn-success mt-3">
  <i class="fas fa-plus"></i> Add New Staff
</a>
