<%- include('partials/head', {
    title: 'Home - ProjectHelp',
    styles: `
        .hero {
            background: linear-gradient(135deg, #4361ee, #3a0ca3);
            color: white;
            padding: 5rem 0;
            text-align: center;
            margin-bottom: 3rem;
        }
        .features {
            padding: 4rem 0;
        }
    `,
    currentPage: 'home'
}); %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/styles.css">

<%- include('partials/navbar', {
    currentPage: 'home',
    user: user // Pass user data from your route
}); %>

<section class="hero">
    <div class="container">
        <h1 class="display-4 fw-bold">Get the Help You Need</h1>
        <p class="lead">ProjectHelp connects you with experts to solve your technical challenges</p>
        <div class="mt-4">
            <% if (user) { %>
                <a href="/dashboard" class="btn btn-light btn-lg me-2">
                    <i class="fas fa-tachometer-alt me-1"></i> Go to Dashboard
                </a>
            <% } else { %>
                <a href="/auth/register" class="btn btn-light btn-lg me-2">
                    <i class="fas fa-user-plus me-1"></i> Get Started
                </a>
            <% } %>
            <a href="/projects" class="btn btn-outline-light btn-lg">
                <i class="fas fa-project-diagram me-1"></i> Browse Projects
            </a>
        </div>
    </div>
</section>

<section class="features">
    <div class="container">
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="feature-icon bg-primary text-white p-4 rounded-circle d-inline-block mb-3">
                    <i class="fas fa-users fa-2x"></i>
                </div>
                <h3>Find Experts</h3>
                <p>Connect with skilled professionals for your project needs.</p>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-icon bg-success text-white p-4 rounded-circle d-inline-block mb-3">
                    <i class="fas fa-handshake fa-2x"></i>
                </div>
                <h3>Collaborate</h3>
                <p>Work together using our platform's built-in tools.</p>
            </div>
            <div class="col-md-4 mb-4">
                <div class="feature-icon bg-warning text-white p-4 rounded-circle d-inline-block mb-3">
                    <i class="fas fa-rocket fa-2x"></i>
                </div>
                <h3>Launch Projects</h3>
                <p>Bring your ideas to life with the right support.</p>
            </div>
        </div>
    </div>
</section>

<%- include('partials/footer'); %>
